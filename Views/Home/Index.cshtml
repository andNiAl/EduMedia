@{
    ViewData["Title"] = "Inicio - EduMedia";
}

<div class="container py-5">
    <!-- Hero principal -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary mb-3">Bienvenido a <span class="text-gradient">EduMedia</span></h1>
        <p class="lead text-muted">Explora materiales educativos, accede a cursos teóricos y potencia tu aprendizaje en línea.</p>
        <a href="@Url.Action("Index", "ContentItems")" class="btn btn-primary rounded-pill px-4 mt-3">📚 Ir a la Biblioteca de Multimedia</a>
    </div>

    <!-- Cursos destacados -->
    <h3 class="text-center mb-4 fw-semibold">Cursos Destacados</h3>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 course-card">
                <img src="https://img.freepik.com/free-vector/online-education-concept-illustration_114360-2369.jpg"
                     class="card-img-top" alt="Programación Básica">
                <div class="card-body">
                    <h5 class="card-title">Programación Básica</h5>
                    <p class="card-text text-muted">Comprende los principios fundamentales de la programación estructurada y el pensamiento lógico.</p>
                    <button class="btn btn-outline-primary view-course w-100"
                            data-title="Programación Básica"
                            data-description="Aprende lógica, estructuras de control y cómo resolver problemas mediante algoritmos.">Ver más</button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 course-card">
                <img src="https://img.freepik.com/free-vector/data-analysis-illustration_114360-1003.jpg"
                     class="card-img-top" alt="Bases de Datos">
                <div class="card-body">
                    <h5 class="card-title">Fundamentos de Bases de Datos</h5>
                    <p class="card-text text-muted">Aprende sobre modelos de datos, relaciones y diseño conceptual de sistemas de información.</p>
                    <button class="btn btn-outline-primary view-course w-100"
                            data-title="Fundamentos de Bases de Datos"
                            data-description="Domina conceptos teóricos del modelado de datos, normalización y fundamentos de SQL.">Ver más</button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 course-card">
                <img src="https://img.freepik.com/free-vector/artificial-intelligence-illustration_114360-5113.jpg"
                     class="card-img-top" alt="Inteligencia Artificial">
                <div class="card-body">
                    <h5 class="card-title">Introducción a la Inteligencia Artificial</h5>
                    <p class="card-text text-muted">Explora conceptos teóricos sobre redes neuronales, agentes inteligentes y aprendizaje automático.</p>
                    <button class="btn btn-outline-primary view-course w-100"
                            data-title="Introducción a la Inteligencia Artificial"
                            data-description="Descubre cómo la IA está transformando la educación, la ciencia y la vida cotidiana.">Ver más</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Recursos educativos -->
    <h3 class="text-center my-5 fw-semibold">Recursos Educativos</h3>
    <div class="row g-4">
        <div class="col-md-3 col-6">
            <div class="resource-card p-4 text-center shadow-sm rounded">
                <div class="icon mb-2">📘</div>
                <p class="mb-0" >Biblioteca de Multimedia</p>
            </div>
        </div>
    </div>
</div>

<!-- Modal para cursos -->
<div class="modal fade" id="courseModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="courseTitle"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p id="courseDescription" class="text-muted"></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".view-course").forEach(btn => {
        btn.addEventListener("click", function () {
            document.getElementById("courseTitle").textContent = this.dataset.title;
            document.getElementById("courseDescription").textContent = this.dataset.description;
            const modal = new bootstrap.Modal(document.getElementById("courseModal"));
            modal.show();
        });
    });
});
</script>
}

<style>
.text-gradient {
    background: linear-gradient(90deg, #007bff, #6610f2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.course-card {
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    cursor: pointer;
}

.course-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

.resource-card {
    background: white;
    transition: all 0.25s ease;
    font-weight: 500;
}

.resource-card:hover {
    background: #f0f4ff;
    transform: translateY(-4px);
}

.icon {
    font-size: 2rem;
}

.modal-content {
    opacity: 0;
    transform: translateY(-10px);
    transition: opacity 0.25s ease, transform 0.25s ease;
}
.modal.show .modal-content {
    opacity: 1;
    transform: translateY(0);
}
</style>
